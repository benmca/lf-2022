<div class="player">
    <div class="controls">
        <button
                tabindex="0"
                class="action-button previous"
        ></button>
        <button
                tabindex="0"
                class="action-button"
        ></button>
        <button
                tabindex="0"
                class="action-button stop"
                aria-label="Stop"
        ></button>
        <button
                tabindex="0"
                class="action-button next"
        ></button>
        <h2 class="current-track-title"></h2>
    </div>
    <svg
            id="track_path"
            xmlns="http://www.w3.org/2000/svg"
            width="100%"
            height="100%"
            preserveAspectRatio="none"
            overflow="visible"
            font-size="6px"
    >
        <path
                class="track_path"
                fill="none"
                stroke="black"
                style="cursor: pointer; transition: stroke 0.33s ease-in-out;"
        ></path>
        <path
                id="progress_bar"
                fill="none"
                stroke="blue"
                style="pointer-events: none; user-select: none;"
        ></path>
        <text
                class="track-duration"
                dy="2"
                fill="white"
        >
            <textPath
            ></textPath>
        </text>
        <text
                class="track-duration"
                id="progress_time_remaining"
                fill="white"
                dy="2"
                text-anchor="end"
        >
            <textPath
                    v-text="timeRemaining"
            ></textPath>
        </text>


        <defs>
            <path
                    class="path_element"
                    fill="none"
            ></path>
        </defs>
    </svg>

</div>